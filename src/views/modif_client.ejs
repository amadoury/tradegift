<div class="container">
    <h2 class="mt-5 mb-3">Modification de Client</h2>
    <form action="/modif_client" method="post">
      <div class="form-group">
        <label for="pseudo">Pseudo :</label>
        <input type="text" class="form-control" name="pseudo" id="pseudo" placeholder="Entrez votre pseudo" value="<%= user_data.pseudo %>" required>
      </div>
      <div class="form-group">
        <label for="motDePasse">Mot de passe :</label>
        <input type="text" class="form-control" name="password"  id="motDePasse" placeholder="Entrez votre mot de passe" value="<%= user_data.password %>" required>
      </div>
      <button type="submit" class="btn mybtn">modifier</button>
    </form>
</div>