<div class="container">
    <div class="row row-present">
        <div class="col-12 col-lg-6 text-main">
            <div class="div-text">
                <p class="cont-text">The best gift shopping <br>Platform</p>
            </div>
            <div class="div-btn">
                <a href="#show-articles">
                    <button type="button" class="btn btn mybtn">Start Shopping</button>
                </a>
            </div>
        </div>
        <div class="col-12 col-lg-6 img-main">
            <!-- <img id="img3" src="../assets/img/image3.png" alt="">
            <img id="img2" src="../assets/img/image2.jpg" alt="">
            <img id="img1" src="../assets/img/image1.png" alt=""> -->
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <!-- <img class="d-block w-100" src="..." alt="First slide"> -->
                 <img class="d-block w-100" id="img2" src="../assets/img/image2.jpg" alt="">

                </div>
                <div class="carousel-item">
                  <!-- <img class="d-block w-100" src="..." alt="Second slide"> -->
                  <img class="d-block w-100" id="img3" src="../assets/img/image3.png" alt="">
                </div>
                <div class="carousel-item">
                  <!-- <img class="d-block w-100" src="..." alt="Third slide"> -->
                  <img class="d-block w-100" id="img1" src="../assets/img/image1.png" alt=""> 
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
        </div>
    </div>
    <div id="show-articles">
        <div class="container mt-4">
            <div class="row">
              <% let i;
              for (i = 0; i < cadUser.length; i++) { %>
              <div class="col-lg-4 col-md-6 mb-3">
                <div class="card  mycard">
                  <img class="img-card mt-3" src="../assets/img/<%= cadUser[i].image %>">
                  <p class="text-center myfont mt-4"><%= cadUser[i].nom %></p>
                  <div class="mb-3">
                    <p class="text-center myfont"><%= cadUser[i].prix %></p>
                  </div>
                  <div class="row pl-2 pr-2 div-select mt-20">
                    <div class="col mb-3 couleur" >
                      <select class="form-select" name="couleur" id="couleur">
                          <option value="">Color</option>
                          <% 
                            let j;
                            for (j = 0; j < cadUser[i].couleurs.length; j++) {
                          %>
                            <option value="<%= cadUser[i].couleurs[j] %>"><%= cadUser[i].couleurs[j] %></option>
                          <% }; %>
                      </select>        
                    </div>
                    <div class="col mb-3 taille" >
                      <select class="form-select" name="taille" id="taille">
                          <option value="">Size</option>
                          <% 
                            let k;
                            for (k = 0;  k < cadUser[i].taille.length; k++) {
                          %>
                            <option value="<%= cadUser[i].taille[k] %>"><%= cadUser[i].taille[k] %></option>
                          <% }; %>
                      </select>        
                    </div>
                  </div>
                  <button id="<%= cadUser[i].id %>" class="btn mybtn btn-cart">ADD TO CART</button>
                </div>
              </div>
              <% } %>
            </div> 
          </div>
    </div>
</div>