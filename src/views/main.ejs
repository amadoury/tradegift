<div class="container">
    <div class="row row-present">
        <div class="col-12 col-lg-6 text-main">
            <div class="div-text">
                <p class="cont-text">The best gift shopping <br>Platform</p>
            </div>
            <div class="div-btn">
                <a href="#show-articles">
                    <button type="button" class="btn btn mybtn">Start Shopping</button>
                </a>
            </div>
        </div>
        <div class="col-12 col-lg-6 img-main">
            <img id="img3" src="../assets/img/image3.png" alt="">
            <img id="img2" src="../assets/img/image2.jpg" alt="">
            <img id="img1" src="../assets/img/image1.png" alt="">
        </div>
    </div>
    <div id="show-articles">
        <div class="container mt-4">
            <div class="row">
              <% let i;
              for (i = 0; i < cadUser.length; i++) { %>
              <div class="col-lg-4 col-md-6 mb-3">
                <div class="card">
                  <img src="../assets/img/<%= cadUser[i].image %>" class="card-img-top" alt="Image du produit">
                  <div class="card-body">
                    <h5 class="card-title">Nom : <%= cadUser[i].nom %></h5>
                    <p class="card-text">Prix : <%= cadUser[i].prix %></p>
                    <a id="<%= cadUser[i].id %>" class="btn mybtn">Add To Cart</a>
                  </div>
                </div>
              </div>
              <% } %>
            </div> 
          </div>
    </div>
</div>