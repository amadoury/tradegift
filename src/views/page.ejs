
<div class="container cont-page">
    <div class="row">
        <% let i;
        for (i = 0; i < cadUser.length; i++) { %>
        <div class="col-lg-4 col-md-6 mb-3">
        <div class="card  mycard">
            <img class="img-card mt-3" src="../assets/img/<%= cadUser[i].image %>">
            <p class="text-center myfont mt-4"><%= cadUser[i].nom %></p>
            <div class="mb-3">
            <p class="text-center myfont"><%= cadUser[i].prix %></p>
            </div>
            <div class="row pl-2 pr-2 div-select mt-20">
            <div class="col mb-3 couleur" >
                <select class="form-select" name="couleur" id="couleur">
                    <option value="">Color</option>
                    <% 
                    let j;
                    for (j = 0; j < cadUser[i].couleurs.length; j++) {
                    %>
                    <option value="<%= cadUser[i].couleurs[j] %>"><%= cadUser[i].couleurs[j] %></option>
                    <% }; %>
                </select>        
            </div>
            <div class="col mb-3 taille" >
                <select class="form-select" name="taille" id="taille">
                    <option value="">Size</option>
                    <% 
                    let k;
                    for (k = 0;  k < cadUser[i].taille.length; k++) {
                    %>
                    <option value="<%= cadUser[i].taille[k] %>"><%= cadUser[i].taille[k] %></option>
                    <% }; %>
                </select>        
            </div>
            </div>
            <button id="<%= cadUser[i].id %>" class="btn mybtn btn-cart">ADD TO CART</button>
        </div>
        </div>
        <% } %>
    </div> 
    </div>
</div>
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item">
      <a class="page-link" href="/0" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <!-- <span class="sr-only">Previous</span> -->
      </a>
    </li>
    <% let l;
    for (l = 0; l < nbPages; l++) { 
    %>
      <li class="page-item"><a class="page-link" href="/<%= l %>"><%= l + 1 %></a></li>
    <% }; %>
    <li class="page-item">
      <a class="page-link" href="/<%= nbPages-1 %>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <!-- <span class="sr-only">Next</span> -->
      </a>
    </li>
  </ul>
</nav>