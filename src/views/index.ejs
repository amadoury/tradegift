<!DOCTYPE html>
<html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <title>Gerante</title>
      <link rel="stylesheet" href="../style/style.css">
       <!-- <link rel="stylesheet" href="../style/congrat.css"> -->
  </head>
  <body>
     
    <nav class="navbar fixed-top navbar-expand-lg navbar-light container-navbar">
      <div class="container cont-navbar">
      <% let home = pseudo_client ? "/" : "/gerante"; %>
      <a class="navbar-brand" href="<%= home %>">
          <img src="../assets/logo/logo-no-background.svg"  width="150" height="74" alt="">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <div>
          <ul class="navbar-nav mr-auto">
            <%- include('header', {data:data_header}); -%>
          </ul>
        </div>
        <div class="navbar-nav ms-auto">
          <a href=""><img class="me-3 mt-2" src="../assets/logo/search.png" width="35px" height="35px"></a>
          <button type="button" class="btn btn-signin">Logout</button>
          <% if (pseudo_client != undefined) { %>
            <a class="myaccount" href="/account?pseudo=<%= pseudo_client %>">
              <img class="image-account" src="../assets/img/utilisateur.png" alt="" width="50px" height="50px">
            </a>
          <% } %>
        </div>
      </div>
      </div>
    </nav>

    <main>
      <%- include(file_to_include); -%>
    </main>
  
    <footer>
      <div class="container">
        <p class="d-flex align-items-center justify-content-center">
          &#169; 2024 Tradegift - All Rights Reserved
        </p>
      </div>
    </footer>
    <%- include('footer', {file:data_footer}); -%>
  </body>
</html>
